{
  "name": "@appliedblockchain/mantle-auth",
  "version": "1.1.0",
  "description": "Authorization functionality for Koa routers",
  "scripts": {
    "test": "NO_PG=1 jest",
    "test:all": "jest",
    "test:pg": "jest psql",
    "test-database": "docker run --rm -p 5432:5432 --name pg postgres:10.6",
    "init-test-database": "docker exec -u postgres pg psql -c 'CREATE DATABASE mantle_auth_test;' && docker exec -u postgres pg psql -d mantle_auth_test -c 'CREATE TABLE \"person\" (\"name\" VARCHAR, \"email\" VARCHAR NOT NULL PRIMARY KEY, \"password\" VARCHAR);'"
  },
  "dependencies": {
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.15.2",
    "koa-joi-router": "^5.1.0",
    "pg": "^7.6.1"
  },
  "devDependencies": {
    "@appliedblockchain/eslint-config": "^2.3.0",
    "@koa/cors": "^2.2.2",
    "axios": "^0.18.0",
    "eslint": "^5.6.0",
    "jest": "^23.6.0",
    "koa": "^2.6.2",
    "koa-compress": "^3.0.0",
    "koa-respond": "^2.1.0",
    "lodash": "^4.17.11",
    "supertest": "^3.3.0"
  },
  "engines": {
    "node": ">=10.13.0"
  },
  "eslintConfig": {
    "extends": "@appliedblockchain"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
